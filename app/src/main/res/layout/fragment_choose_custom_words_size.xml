<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.destinations.ChooseCustomWordsSizeFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/customSizeTitle"
        android:layout_width="377dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Select a Custom Puzzle Size"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115" />

    <Button
        android:id="@+id/btn4x4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4x4 Puzzle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customSizeTitle"
        app:layout_constraintVertical_bias="0.054" />

    <Button
        android:id="@+id/btn6x6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6x6 Puzzle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn4x4"
        app:layout_constraintVertical_bias="0.036" />

    <Button
        android:id="@+id/btn9x9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9x9 Puzzle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn6x6"
        app:layout_constraintVertical_bias="0.054" />

    <Button
        android:id="@+id/btn12x12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12x12 puzzle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn9x9"
        app:layout_constraintVertical_bias="0.065" />


</androidx.constraintlayout.widget.ConstraintLayout>